        <script>
            function setMargins() {
                width = $("#markets").width();
                containerWidth = $("#down-arrow").width();  
                leftMargin = (width-containerWidth)/2;    
                $("#down-arrow").css("left", leftMargin);    
            }

            $(document).ready(function() {
                setMargins();
                $(window).resize(setMargins);
                $("#down-arrow").css("visibility", "visible");
                $("#down-arrow").click(() => window.location.hash = "#markets");
            });
        </script>
